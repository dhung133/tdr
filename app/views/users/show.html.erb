<div class="posts-wrapper">
  <div class="container">
    <div class="row profile-header well">
      <div class="col-md-6">
        <div class="img-circle">
          <%= cl_image_tag @user.avatar_url :thumbnail %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="user-name-and-follow">
          <label>Name: <h3 class="profile-user-name"><%= @user.name %></h3></label>
        </div>
        <div>
          <label>Email: <h3 class="profile-user-name"><%= @user.email %></h3></label>
        </div>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
      </div>
    </div>
    <div class="cod-md-6">
      <%= render "follow_form" if user_signed_in? %>      
    </div>

    <div class="row">
      <div class="activity-header">
        Activities
      </div>
      <ul class="list-group">
        <%= @activities.blank? ? t("activities.nothing")
          : render_activities(@activities) %>
      </ul>
      <%= paginate @activities, theme: "twitter-bootstrap-3" %>
    </div>
  </div>
</div>
